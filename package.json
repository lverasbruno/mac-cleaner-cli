{
  "name": "clean-my-mac-cli",
  "version": "1.1.1",
  "description": "Open source CLI tool to clean your Mac - similar to CleanMyMac",
  "type": "module",
  "bin": {
    "clean-my-mac": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mac",
    "cleaner",
    "macos",
    "cleanup",
    "cache",
    "cli",
    "cleanmymac",
    "disk-space",
    "system-maintenance",
    "junk-files"
  ],
  "author": "guhcostan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guhcostan/clean-my-mac.git"
  },
  "bugs": {
    "url": "https://github.com/guhcostan/clean-my-mac/issues"
  },
  "homepage": "https://github.com/guhcostan/clean-my-mac#readme",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.28.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.1",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "ora": "^9.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "os": [
    "darwin"
  ]
}
